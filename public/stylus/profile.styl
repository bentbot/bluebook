.cover
	@extend .box
	height: 170px
	background: #ACD1F7
	border: 1px solid #fff
	border-top: 0
	max-width: none
	margin: 20px auto 10px auto !important
	transition: all 0.8s ease-in-out
	position: relative
	.btn
		position: relative
		cursor: pointer
		background: white;
		padding: 4px 8px;
		float: left;
		border-radius: 4px;
		border: 1px solid #B9B9B9;
		color: #4F5152;
		box-shadow: 1px 1px 0px rgba(33, 33, 33, 0.05);
		&:hover .floater
			opacity: 1;
		.floater
			@extend .floater
			width: 200px;
			text-align: center;
			left: -5px;
			top: 35px;
.alias
	font-family: sans-serif;
	color: #fff;
	text-shadow: 1px 2px 0px rgba(0,0,0,0.41);
	position: absolute;
	bottom: 12px;
	left: 220px;
	margin: 0;
	font-size: 25px;
.profile-picture img 
	width: 190px;
	left: 12px;
	position: absolute;
	bottom: -93px;
	border: 2px solid white;
	overflow: hidden;
	border-radius: 2px;
	background: white;
.profile.wrap
	margin: 0 auto;
	float: none;
	section
		background: white;
		margin: 100px 10px 0 0;
		padding: 10px;
	.feed
		@media screen and (max-width: 1024px)
			width: 73%;
		.publish, article
			max-width: none;
.add-friend
	font-family: sans-serif;
	font-size: 13px;
	font-weight: 600;
	padding: 5px 12px;
	position: absolute !important;
	right: 20px;
	bottom: 10px;
.cover-uploader
	opacity: 0
.cover-background
	border-radius: 3px
	background: transparent;
	background-size: 100% auto;
	height:100%;
	width:100%;
	position: absolute;
	top: 0;
	left: 0;
	background-image: url('/images/1439315857_22.jpg');
	background-position: 0px -330px;
.progress-indicator
	position: absolute;
	top: 0;
	left: 0;
	width: 1%;
	max-width: 100%;
	height: 3px;
	background: #90FF62;
	transition: width 0.7s ease-in-out, opacity 0.2s ease-in-out;
	box-shadow: 0 1px 4px rgba(128, 128, 128, 0.1);
	&.hidden
		height: 0;
		opacity: 0;